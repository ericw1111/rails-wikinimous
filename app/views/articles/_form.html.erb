<%= form_for(@article) do |f| %>
  <%= form_tag(class: "") %>
  <div class="mb-3">
  <%= f.label(:title, class: "form-label") %>
  <%= f.text_field(:title, class: "form-control") %>
  </div>
  <div class="mb-3">
  <%= f.label(:content, class: "form-label") %>
  <%= f.text_area(:content, class: "form-control") %>
  </div>
  <div>
  </div>
